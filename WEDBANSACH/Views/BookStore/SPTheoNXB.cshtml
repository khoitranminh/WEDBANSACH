
@{
    ViewBag.Title = "SPTheoNXB";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<h2>Sản phẩm theo nhà xuất bản</h2>
@foreach (var item in Model)
{
    <div class="col-sm-4 col-lg-4 col-md-4">
        <div class="thumbnail">
            <a href="@Url.Action("Chitietsach", "BookStore", new { id = item.Masach })">
                <img src="~/Hinhsanpham/@item.Anhbia" alt="@item.Tensach" width="100">
                <div class="caption">
                    <h4>
                        <a href="#">@item.Tensach</a>
                    </h4>
                    <h4 class="pull-right">@item.Giaban</h4>
                </div>
            </a>
            <div class="ratings">
                <p class="pull-right">15 reviews</p>
                <p>
                    <span class="glyphicon glyphicon-star"></span>
                    <span class="glyphicon glyphicon-star"></span>
                    <span class="glyphicon glyphicon-star"></span>
                    <span class="glyphicon glyphicon-star"></span>
                    <span class="glyphicon glyphicon-star"></span>
                </p>
            </div>
        </div>
    </div>
}